<!DOCTYPE html>
<html>
<head>
    <!-- ==========================
    	Meta Tags 
    =========================== -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- ==========================
    	Title 
    =========================== -->
    <title>Smart Home</title>
    <link rel="shortcut icon" href="/img/icontitle.ico" />
    <!-- ==========================
    	Fonts 
    =========================== -->
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <!-- ==========================
    	CSS 
    =========================== -->
    <link rel="stylesheet" type="text/css" href="/lib/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/lib/css/bootstrap-colorselector.css">
    <link rel="stylesheet" type="text/css" href="/lib/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/custom.css">
    <link rel="stylesheet" type="text/css" href="/lib/css/bootstrap-select.min.css">
</head>
<body>
    <!-- ==========================
        Preloader
    =========================== -->
    <div id='preloader'>
        <div class="loader">
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
        </div>
    </div>
    <!-- ==========================
        Saveing
    =========================== -->
    <div id="saving">
        <div class="pulse"></div>
    </div>


	<!-- ==========================
    	HEADER - START 
    =========================== -->
    <header>
	<!-- ==========================
    	Nav-bar - START 
    =========================== -->
    	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    		<div class="container">
    		<!-- Brand and toggle get grouped for better mobile display -->
    			<div class="navbar-header">
    				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavigation"><i class="fa fa-bars"></i></button>
                    {{#if username}}    {{!-- if loggedin --}}
                    <i class="fa fa-user fa-3x navbar-logo pull-left"></i>
                    <a href='/'class="navbar-brand">{{{username}}}</a>
                    {{else}}
                    <img src="img/icon.png" class="navbar-logo pull-left" alt="" />
                    <a href='/' class="navbar-brand">Smart Home WiFi</a>
                    {{/if}}
                </div>  {{!-- /navbar-header --}}
            <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="myNavigation">
                    <ul class="nav navbar-nav navbar-right">
                    {{#if username}}    {{!-- if loggedin --}}
                        <li><a href='/'>Home</a></li>
                        <li><a href='/choose_map'>Map</a></li>
                        <li class='logout'><a href='/logout'>Logout</a></li>
                    {{else}}
                        <li><a href='#'id="button_login">Login</a></li>
                    {{/if}}
                    </ul>
                </div>	{{!-- /navbar collpase --}}
    		</div>	{{!-- /container --}}
    	</nav>	{{!-- /nav-bar --}}


	</header>	{{!-- /header --}}

	<!-- ==========================
    	Section Your Selected Map 
    =========================== -->
    <section id='your-selected-map' class='content'>
    	<div class='container'>
    		<div class='row'>	{{!-- /Header Name --}}
    			<div class='col-md-5'>
    				<h3>{{{map}}}<h3> 
    			</div>
    			<div class="col-md-7"style='text-align:right'>
    				<a class='block' href="/page_data"><p>data</p></a>
    				<a class='block' href="/rule"><p>rule</p></a>
    			</div>
    		</div>
    		{{!-- content body --}}
    		<div class='row'>
    			<div class="col-md-3 option">	{{!-- option + editmap --}}
    				<div class='row'>
    					<div class="col-md-11 option-header"><h2>Option</h2></div>{{!-- option --}}
   					</div>
	    			{{!-- Switch image --}}
   					<div class='row'>
	    				<div class="col-md-8 text-option">Show Image</div>
		    			<div class="col-md-4">
		    				<label class="switch">	{{!-- check box --}}
								<input type="checkbox" id="switch_image" checked>
								<div class="slider round"></div>
							</label>
		    			</div>
	    			</div>{{!-- /row --}}
    				{{!-- Switch Grid --}}
    				<div class='row'>
	    				<div class="col-md-8 text-option">Show Grid</div>
		    			<div class="col-md-4">
		    				<label class="switch">	{{!-- check box --}}
								<input type="checkbox" id="switch_grid" checked>
								<div class="slider round"></div>
							</label>
		    			</div>
		    		</div>{{!-- /row --}}
    				{{!-- Switch Room --}}
    				<div class='row'>
	    				<div class="col-md-8 text-option">Show Room</div>
		    			<div class="col-md-4">
		    				<label class="switch">	{{!-- check box --}}
								<input type="checkbox"id="switch_room" checked>
								<div class="slider round"></div>
							</label>
		    			</div>
		    		</div>{{!-- /row --}}

    				{{!-- Switch AP --}}
                    {{!-- 
    				<div class='row'>
	    				<div class="col-md-8 text-option">Show AP</div>
		    			<div class="col-md-4">
		    				<label class="switch">	
								<input type="checkbox" id="switch_ap" checked>
								<div class="slider round"></div>
							</label>
		    			</div>
		    		</div>
                     --}}
                    {{!-- /row --}}

    				{{!-- Switch Edit Map --}}
    				<div class='row'>
	    				<div class="col-md-8 text-option">Edit Map</div>
		    			<div class="col-md-4">
		    				<label class="switch">	{{!-- check box --}}
								<input type="checkbox"  id="switch_edit_map">
								<div class="slider round"></div>
							</label>
		    			</div>
	    			</div>{{!-- /row --}}


	    			{{!-- Edit Map --}}
	    			<div class='row edit-map'id='edit-map'>
		    			<div class='row '>
		    				<div class="col-md-11 edit-header">
		    					<h2>Edit Map</h2>
		    				</div>{{!-- Editmap --}}
		    			</div>	{{!-- /row --}}

	    				{{!-- Draw room --}}
	    				<div class='row'>
		    				<div class="col-md-8 text-edit">Draw Room</div>
			    			<div class="col-md-4">
			    				<label class="switch">	{{!-- check box --}}
									<input type="checkbox" id="switch_draw_room">
									<div class="slider round"></div>
								</label>
			    			</div>
			    		</div>	{{!-- /row --}}
	    				{{!-- Draw AP --}}
                        {{!-- 
	    				<div class='row'>
		    				<div class="col-md-8 text-edit">Draw AP</div>
			    			<div class="col-md-4">
			    				<label class="switch">	
									<input type="checkbox" id="switch_draw_ap">
									<div class="slider round"></div>
								</label>
			    			</div>
			    		</div>	
                        --}}
                        {{!-- /row --}}

	    				{{!-- Name --}}
	    				<div class='row'>
		    				<div class="col-md-4 text-edit">Name</div>
			    			<div class=".col-md-8">
			    		
			    				<form class="form">	{{!-- form for rename --}}
			    					<div class="form-group">
	    								<input type="text" class="form-control" id="name-selected">
			    					</div>
			    				</form>
			    				<div class="rename">
                                     <button class="btn btn-primary" id="button-initvalue">initial Value</button>
			    					 <button class="btn btn-primary" id="button-rename">rename</button>
			    				</div>
			    		

			    			</div>
			    		</div>	{{!-- /row name--}}

	    				{{!-- Color --}}
	    				<div class='row'>
		    				<div class="col-md-3 text-edit">Color</div>
			    			<div class="col-md-9">
				    			<select id="colorselector">
								    <option  value="1"data-color="#1abc9c" selected="selected"></option>
								    <option  value="2"data-color="#16a085"></option>
								    <option  value="3"data-color="#2ecc71"></option>
								    <option  value="4"data-color="#27ae60"></option>
								    <option  value="5"data-color="#3498db"></option>
								    <option  value="6"data-color="#2980b9"></option>
								    <option  value="7"data-color="#9b59b6"></option>
								    <option  value="8"data-color="#8e44ad"></option>
								    <option  value="9"data-color="#34495e"></option>
								    <option  value="10"data-color="#2c3e50"></option>
								    <option  value="11"data-color="#f1c40f"></option>
								    <option  value="12"data-color="#f39c12"></option>
								    <option  value="13"data-color="#e67e22"></option>
								    <option  value="14"data-color="#d35400"></option>
								    <option  value="15"data-color="#e74c3c"></option>
								    <option  value="16"data-color="#c0392b"></option>
								    <option  value="17"data-color="#ecf0f1"></option>
								    <option  value="18"data-color="#bdc3c7"></option>
								    <option  value="19"data-color="#95a5a6"></option>
								    <option  value="20"data-color="#7f8c8d"></option>
								</select>
			    			</div>
			    		</div> 	{{!-- /row color --}}
	    				{{!-- button save --}}
	    				<div class='row submit' style="text-align:right">
	    					<button type="button" class="btn btn-danger" id="delete">Delete</button>
	    					<button type="button" class="btn btn-primary" id="paper_save">Save</button>
			    		</div>	{{!-- /row button--}}

	    			</div>	{{!-- /edit map --}}

    			</div>	{{!-- /col-md-3 --}}

    			<div id='map' class='col-md-9 map'></div>	{{!-- map --}}

    		</div>	{{!-- /row --}}

    		{{!-- data --}}
    		<div class='row'>
    			{{!-- Tag  in room--}}
    			<div class='col-md-6'>
    				<div class='panel'>	{{!-- panel --}}
    					
    					<div class="panel-heading">	{{!-- /heading --}}
    						Tag

    					</div>	{{!-- /end heading --}}

    					<div class='panel-body'>
    						<table class="table table-striped table-condensed">
    							<thead style="text-align:center">		{{!-- head table --}}
    								<tr>	
    									<th>Name</th>
    									<th>Room</th>
    								</tr>
    							</thead>	{{!-- /.head table--}}
	    						{{!-- table body --}}
		                        <tbody>		
		                        	{{#each Tag_list}}
                                    <tr>
                                        <td id='tag-name'>{{this.name}}</td>
                                        <td>{{this.room}}</td>
                                    </tr>
                                    {{/each}}

								</tbody>
	                        </table>	{{!-- /table--}}
    					</div>	{{!-- / panel body--}}

    				</div> {{!-- /end panel --}}
    			</div> {{!-- /end col-md-6 table --}}



    			{{!-- Tag  in room--}}
    			<div class='col-md-6'>
    				<div class='panel'>	{{!-- panel --}}
    					
    					<div class="panel-heading">	{{!-- /heading --}}
    						Control

    					</div>	{{!-- /end heading --}}

    					<div class='panel-body'>
    						<table class="table table-striped table-condensed">
    							<thead style="text-align:center">		{{!-- head table --}}
    								<tr>	
    									<th>Name</th>
    									<th>Status</th>
    								</tr>
    							</thead>	{{!-- /.head table--}}
	    						{{!-- table body --}}
		                        <tbody>		

									{{#each Control_list}}
                                        <tr>
                                        <td  id='control-name'>{{this.name}}</td>
                                        {{#if this.status}}
                                            <td><span class="label label-success">On</span></td>
                                        {{else}}
                                            <td><span class="label label-danger">Off</span></td>
                                        {{/if}}
                                        </tr>
                                    {{/each}}

								</tbody>
	                        </table>	{{!-- /table--}}
    					</div>	{{!-- / panel body--}}

    				</div> {{!-- /end panel --}}
    			</div> {{!-- /end col-md-6 table --}}

    		</div>	{{!-- end row --}}


    	</div>	{{!-- /end container --}}
    </section> 


    {{!-- initial Value --}}
    <div class="modal fade" id="modal-initialvalue" role="dialog">
        <div class="modal-dialog">
              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <div class="modal-title">Set Initial Value</div>
                </div>  {{!-- /modal-header --}}

                {{!-- modal-body --}}
                <div class="modal-body" id="modal-body">
                <div class='row'>
                    <div class='col-md-12' id='choose-id-tag'>
                        <div class='col-md-4 list'>Choose Tag</div>
                        <div class='col-md-6' id='init-choose-tag'></div>
                    </div>
                    <div class='col-md-6'>
                        <div class='col-md-12'>
                            <span class='timer' id='timer'>01 : 00</span>
                        </div>
                        <div class='col-md-12'>
                            <button type="button" class="btn btn-default" id='start-time'>Start</button>
                            <button type="button" class="btn btn-default" id='stop-time'>Stop</button>
                        </div>
                        <div class='col-md-12'>
                            <span class='avg-init'>avg.Initial Value :</span>
                            <span class='timer' id='avg-init'>0</span>
                        </div>
                        <div class='col-md-12'>
                            <button type="button" class="btn btn-default" id='submit-init'>Submit</button>
                            <button type="button" class="btn btn-default" id='cancel-init'>Cancel</button>
                        </div>
                    </div>
                    <div class='col-md-3 set-init text-center'>
                        <div class='header-set-init'>set</div>
                        <div id='set-init'>
                        </div>
                    </div>
                </div>
                    

                </div>  {{!-- /modal-body --}}
            </div>    {{!-- /modal-content --}}
        </div>  
    </div>  {{!-- /modal --}}




    <!-- ==========================
    	JS 
    =========================== -->
    {{!-- lib --}}
    <script src="/lib/js/jquery-3.1.1.min.js"></script>
    <script src="/lib/js/bootstrap.min.js"></script>
    <script src="/lib/js/bootstrap-colorselector.js"></script>
    <script type="text/javascript" src="/lib/js/raphael.js"></script>    {{!-- raphael js --}}
	<script type="text/javascript" src="/lib/js/raphael.json.js"></script>	{{!-- raphael js --}}
    <script src="/lib/js/bootstrap-select.min.js"></script>

    {{!-- design js --}}
    <script src="/js/design/custom.js"></script>
    {{!-- work js --}}
    	<!--initialize value from handlebars-->
    	<script type="text/javascript">
			var nameMap = "{{map}}";
            var newmap = "{{newmap}}" ? "{{newmap}}" : "False";
		</script>
	<script type="text/javascript" src="/js/work/global_func.js"></script>
        <!--custom-->
    <script type="text/javascript" src="/js/work/getsizeImg.js"></script>
	<script type="text/javascript" src="/js/work/custom-map.js"></script>
	<script type="text/javascript" src="/js/work/FromMicrogear.js"></script>
		<!--microgear-->
	<script src="https://cdn.netpie.io/microgear.js"></script>
	<script type="text/javascript" src="/js/work/microgear.js"></script>

</body>
</html>